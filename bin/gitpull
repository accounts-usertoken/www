#!/bin/bash
[ -f ~/.profile ] && . ~/.profile

DATE=`date`
ROOT=/home/www
LOG="$ROOT/log/gitpull.log"
PID=""

skipsites=""

sites="
shell.usertoken.com
"

echo "Starting gitpull" > $LOG
for dir  in $sites; do
  app="$ROOT/$dir"
  (( echo "checking $app..." ) && [ -d "$app" ] && ( cd $app; echo "gitpull $app"; git pull )) >> $LOG  &
done
